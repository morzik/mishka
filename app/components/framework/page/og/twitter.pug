  https://developer.twitter.com/en/docs/tweets/optimize-with-cards/overview/summary

//-
  mixin og_twitter()
    -
      function _get(param){
        return typeof param === 'string'
          ? param
          : param.hasOwnProperty('tw')
            ? param.tw
            : false
      }

    if og
      meta(name="twitter:card" content="summary_large_image" )
      //-meta(name="twitter:site" content="@flickr" )
      meta(name="twitter:title" content!=_get(og.title))
      meta(name="twitter:description" content!=_get(og.description))
      meta(name="twitter:image" content!=_get(og.image))

  +og_twitter()

+og-meta("twitter:card", "summary_large_image" )
+og-meta("twitter:title", og.title, ['tw'])
+og-meta("twitter:description", og.description, ['tw'])
+og-meta("twitter:image", og.image, ['tw'])
