mixin checkbox(content, params)
  -params = assign({error:true}, params)
  -var attr = splitProperties(attributes, ['type', 'name', 'value', 'data-validations', 'checked']);
  -content = assign({}, content);

  .checkbox&attributes(attributes)
    label.checkbox__label&attributes(attributes)
      input(type="checkbox" value!=content.value).checkbox__input&attributes(attr)
      .checkbox__box
      .checkbox__label!= content.label
        block
    if params.error
      +form-error
